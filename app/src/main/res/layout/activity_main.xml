                android:paddingTop="8dp"
                android:paddingBottom="9dp">
                <!--android:background="@color/orange"-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/currency_bg_2000"
                    android:gravity="center"
                    android:text="2000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/calc_font_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="×"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/calc_input_2000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:background="@drawable/currency_input_bg"
                    android:elevation="1dp"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:maxLength="5"
                    android:textAlignment="viewEnd"
                    android:textSize="@dimen/calc_font_size" />

                <TextView
                    android:id="@+id/calac_total_2000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="right"
                    android:text="1,23,45,678"
                    android:textSize="@dimen/calc_font_size" />
            </TableRow>


